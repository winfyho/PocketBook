/* miniprogram/pages/setting/pages/advice/advice.wxss */
page{
  background: #f5f5f5;
  padding:10rpx 30rpx;
  box-sizing: border-box;

}
.header{
  padding-left: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #f5f5f5;
}
.text{
  border-radius: 15rpx;
  width: 100%;
  background: #fff;
}
.text input{
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 20rpx;
  height: 80rpx;
  line-height: 40rpx;
}
.text textarea{
  height: 400rpx;
  padding: 20rpx 20rpx;
  line-height: 42rpx;
}
.send-btn{
  margin-top: 30rpx;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #00B26A;
  color: #fff;
}