/* pages/schedule/components/sche-editor/sche-editor.wxss */

.sche-editor {
  position: fixed;
  z-index: 10;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 0rpx 0rpx;
  /* border: 2px solid #cd7572; */
}
.sche-editor .header{
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #8B686F;
  display: flex
}
.sche-editor .header>view{
  color: #fff;
  line-height: 80rpx;
}
.sche-editor .header>view.title{
  flex: 1 1 auto;
  color: #fff;
  line-height: 80rpx;
  font-weight: 500;
  padding-left: 200rpx
}
.sche-editor .header .closeEditor{
  flex: 0 0 110rpx;
  color: #e5e5e5;
  text-align: center;
}
/* 日程名字  *********************************/

.sche-editor .name {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  height: 90rpx;
  display: flex;
}
.sche-editor .name image{
  display: inline-block;
  width: 53rpx;
  height: 50rpx;
  padding: 20rpx 0;
  /* border: 1px solid #f00; */
  margin-right: 15rpx;

}
.sche-editor .name text {
  flex: 0 0 auto;
  box-sizing: border-box;
  padding: 0 0rpx 0 0;
  display: inline-block;
  height: 100%;
  line-height: 90rpx;
}

.sche-editor .name input {
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  height: 100%;
  background: #fff;
  /* border: 1px solid #999; */
}


/* 时间选择器 ***************************** */
.sche-editor .time {
  width: 100%;
  height: 200rpx;
  display: flex;
  padding-top: 30rpx;
}

.sche-editor .time .picker {
  flex: 0 0 480rpx;
  height: 200rpx;
}

.sche-editor .time .picker>view {
  height: 50%;
  line-height: 100rpx;
  /* border: 1px solid #999; */
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
}
.sche-editor .time .picker>view>text{
  flex: 0 0 130rpx;
}
.sche-editor .time .picker>view .date-picker{
  flex: 0 0 190rpx;
  color: #555;
}
.sche-editor .time .picker>view .time-picker{
  flex: 0 0 100rpx;
  color: #f80;
}
.sche-editor .time .picker>view .time-text{
  color: #f80;
}
.sche-editor .time switch {
  flex: 0 0 200rpx;
  height: 200rpx;
  padding-top: 50rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}


/* 地点 ******************************** */
.sche-editor .place {
  height: 140rpx;
  padding: 30rpx 0;
  padding-left: 30rpx;
  box-sizing: border-box;
  width: 100%;
  border-bottom: 8px solid #f4f4f4;
  display: flex;
}

.sche-editor .place text{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 0 30rpx 0;
}
.sche-editor .place image{
  display: inline-block;
  width: 53rpx;
  height: 50rpx;
  padding: 15rpx 0;
  /* border: 1px solid #f00; */
  margin-right: 15rpx;

}
.sche-editor .place input {
  padding-left: 20rpx;
  height: 80rpx;
  /* border: 1px solid #000; */
}


/* 备注信息 ***************************** */
.sche-editor .infor {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 35rpx;
  padding-bottom: 60rpx;

}
.sche-editor .infor .title{
  height: 80rpx;
  display: flex;
}
.sche-editor .infor image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx 0;
  /* border: 1px solid #f00; */
  margin-right: 0rpx;

}
.sche-editor .infor text{
  display: block;
  padding-left: 20rpx;
  font-size: 34rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-bottom: 10rpx;
}

.sche-editor .infor textarea {
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx;
  border: 1px solid #777;
  /* height: 200rpx; */
  font-size: 30rpx;
  min-height: 200rpx;
  height: 200rpx;
}
.sche-editor .footer{
  height: 80rpx;
  width: 100%;
  display: flex;
}
.sche-editor .footer>button.complete{
  width: 100%;
  background: #8B686F;
  color: #fff;
}
.sche-editor .footer>button.delete{
  width: 30%;
  background: #ccc;
}