  line-height: 105rpx;
}

.detail-item .income {
  color: rgb(0, 178, 106);
}

.detail-item .outcome {
  color: rgb(223, 18, 18);
}

.detail-item .right-bar {
  width: 190rpx;
  flex: 0 0 190rpx;
  /* background: #eee; */
  height: 100rpx;
  display: flex;
}

.detail-item .right-bar>view {
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 24rpx;
}

