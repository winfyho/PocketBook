
.add-record .input-block{
  display: flex;
  border-bottom: 2px solid #eee;
}

/* ----------日期选择器--------------- */
.add-record .date{
  flex: 0 0 160rpx;
  background: #999;
  border-right: 1px solid #eee;
  padding-right: 20rpx;
  width: 100%;
  height: 130rpx;
  background: #fff;
}
.add-record .date picker{
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  color: #f40;
  text-align: center;
  font-size: 44rpx;
}
.add-record .date picker .month{
  font-size: 22rpx;
  color: #777;
  margin-right: 10rpx;
}

/* -----------数字输入框-------------- */
.add-record .number{
  height: 130rpx;
  width: 100%;
}
.add-record .number input{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding:  20rpx 30rpx;
  background: #fff;
  color: #86BAA3;
  font-size: 48rpx;
}


/* ----------------添加备注-------------- */
.add-record .comment{
  display: flex;
  flex: 0 0 200rpx;
  height: 130rpx;
  line-height: 130rpx;
  padding-left:20rpx;
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
}
.add-record .comment input{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  text-align: center;
  overflow: hidden;
  
}
.add-record .comment .completeCom{
  background: rgb(41, 219, 65);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  width: 160rpx;
  height: 100%;
  text-align: center;
  line-height: 130rpx;
  float: right;
  margin-right: 10rpx;
}
.add-record .addCommentActive{
  position: absolute;
  z-index: 20;
  background: #f2f2f2;
  width: 750rpx;
  height: 130rpx;
  line-height: 130rpx;
}
