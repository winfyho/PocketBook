/* 键盘 */
.keyboard{
  width: 100%;
  background: #f5f5f5;
  box-sizing: border-box;
  padding: 20rpx 25rpx 0rpx 25rpx;
  
  height: 580rpx;
  display: flex;
  position: absolute;
  bottom: 0rpx;
}

/* -----------数字键盘------------- */
.keyboard .keyboard-num{
  width: 460rpx;
  margin-right: 20rpx;
  height: 555rpx;
  display: flex;
  flex-wrap: wrap;
}
.keyboard .keyboard-num button.num{
  width: 140rpx;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  background: #fff;
}
.keyboard .keyboard-num button.num-click{
  background: #eee;
}
.keyboard .keyboard-num button.zero{
  width: 290rpx;
  height: 130rpx;
}

/* --------------控制键盘----------------- */
.keyboard .keyboard-ctrl{
  flex: 1 1 auto;
}
.keyboard .keyboard-ctrl button{
  width: 100%;
  height: 129rpx;
  line-height: 129rpx;
  margin-bottom: 13rpx;
  box-sizing: border-box;
}
.keyboard .keyboard-ctrl .complete{
  background: #86BAA3;
  color: #fff;
  height: 265rpx;
  line-height: 285rpx;
}
.keyboard .keyboard-ctrl .btn-click{
  background: rgb(90, 202, 152)
}