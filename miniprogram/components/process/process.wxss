/* components/process/process.wxss */
.body{
  position: relative;
  /* background: #f5f5f5; */
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  padding-right: 15rpx;
  display: flex;
}
.body .name{
  height: 100%;
  line-height: 80rpx;
  padding: 0 30rpx;
  flex: 0 0 auto;
}
.body .outline{
  flex: 1 1 auto;
  /* border: 1px solid #000; */
  box-sizing: border-box;
  padding: 10rpx 90rpx 10rpx 0rpx; 
}
.body .outline .inline{
  position: relative;
  background: #00f;
  width: 80%;
  height: 100%;
  border-radius: 10rpx;
}
.body .outline .inline .inline-text{
  font-size: 26rpx;
  position: absolute;
  right: 15rpx;
  display: inline-block;
  height: 100%;
  line-height: 70rpx;
  color: #fff;
}
.body .outline-text{
  font-size: 26rpx;
  display: block;
  position: absolute;
  right: 0rpx;
  transform: translateX(120%);
  color: #555;
  height: 100%;
  line-height: 70rpx;
}